# Server Configuration
PORT=5000
NODE_ENV=production

# Database
# For production MongoDB on Ubuntu server:
MONGODB_URI=mongodb://localhost:27017/bitwisdom
# For MongoDB with authentication (recommended for production):
# MONGODB_URI=mongodb://username:password@localhost:27017/bitwisdom

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (comma-separated for multiple domains)
FRONTEND_URL=https://bitwisdom.ai,https://www.bitwisdom.ai
# For local development:
# FRONTEND_URL=http://localhost:5173

# Admin Credentials (for initial seeding only)
ADMIN_NAME=Admin User
ADMIN_EMAIL=admin@bitwisdom.com
ADMIN_PASSWORD=ChangeThisSecurePassword123!

# Email Configuration (Gmail SMTP)
# Use bitwisdomai@gmail.com or your preferred Gmail account
EMAIL_USER=bitwisdomai@gmail.com
# For Gmail: Generate an "App Password" from your Google Account settings
# Go to: https://myaccount.google.com/apppasswords
# Enable 2-Step Verification first, then create an App Password
EMAIL_PASSWORD=your-16-character-app-password
# Email address where form submissions will be sent
OWNER_EMAIL=your-email@example.com
